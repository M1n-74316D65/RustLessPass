{
  "manifest_version": 3,
  "name": "RustedLessPass",
  "version": "1.2",
  "description": "A Stateless Password Manager",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "assets/icons/maskable_icon_x48.png",
      "96": "assets/icons/maskable_icon_x96.png",
      "128": "assets/icons/maskable_icon_x128.png",
      "192": "assets/icons/maskable_icon_x192.png",
      "384": "assets/icons/maskable_icon_x384.png",
      "512": "assets/icons/maskable_icon_x512.png"
    }
  },
  "icons": {
    "48": "assets/icons/maskable_icon_x48.png",
    "96": "assets/icons/maskable_icon_x96.png",
    "128": "assets/icons/maskable_icon_x128.png",
    "192": "assets/icons/maskable_icon_x192.png",
    "384": "assets/icons/maskable_icon_x384.png",
    "512": "assets/icons/maskable_icon_x512.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  }
}